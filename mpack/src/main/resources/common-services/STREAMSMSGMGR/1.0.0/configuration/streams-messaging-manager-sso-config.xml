<configuration>

  <!-- security -->

  <property>
    <name>streams_messaging_manager.sso.enabled</name>
    <display-name>Enable Streams Messaging Manager Knox SSO</display-name>
    <value>false</value>
    <description/>
    <value-attributes>
      <type>boolean</type>
    </value-attributes>
    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.authentication.provider.url</name>
    <value></value>
    <display-name>authentication.provider.url</display-name>
    <description>Knox's authentication provider url e.g. https://SSO_host:8443/gateway/knoxsso/api/v1/websso</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <depends-on>
      <property>
        <type>knoxsso-topology</type>
        <name>gateway.port</name>
      </property>
    </depends-on>
    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.public.key.pem</name>
    <value></value>
    <display-name>public.key.pem</display-name>
    <description>Knox's public key inside knox-sso-cert.pem. Paste key without the —— BEGIN CERTIFICATE and — END CERTIFICATE lines</description>
    <value-attributes>
      <type>multiLine</type>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>

    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.token.validity</name>
    <value>30</value>
    <display-name>token.validity</display-name>
    <description>Token Validity for SMM's Authentication in seconds</description>
    <value-attributes>
      <empty-value-valid>false</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.expected.jwt.audiences</name>
    <value></value>
    <display-name>expected.jwt.audiences</display-name>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.jwt.cookie.name</name>
    <value></value>
    <display-name>jwt.cookie.name</display-name>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.cookie.path</name>
    <value></value>
    <display-name>cookie.path</display-name>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="false"/>
  </property>

  <property>
    <name>streams_messaging_manager.cookie.domain</name>
    <value></value>
    <display-name>cookie.domain</display-name>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="false"/>
  </property>

</configuration>